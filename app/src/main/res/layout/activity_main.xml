<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnListView"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnNested"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nested"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGrid"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnPagerGrid"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PagerGrid"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnCoordinator"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinator"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGridItemHeight"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridItemHeight"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGridRecycler"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridRecycler"
        app:backgroundTint="@color/colorAccent"
        tools:ignore="HardcodedText" />

</LinearLayout>